<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Patient_APP" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Patient_APP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="One">
        <item name="colorAccent">@color/one</item>
        <item name="colorControlNormal">@color/circle</item>
    </style>

    <style name="Two">
        <item name="colorAccent">@color/two</item>
        <item name="colorControlNormal">@color/circle</item>
    </style>

    <style name="Three">
        <item name="colorAccent">@color/three</item>
        <item name="colorControlNormal">@color/circle</item>
    </style>

    <style name="Four">
        <item name="colorAccent">@color/four</item>
        <item name="colorControlNormal">@color/circle</item>
    </style>

    <style name="Five">
        <item name="colorAccent">@color/five</item>
        <item name="colorControlNormal">@color/circle</item>
    </style>

    <style name="Theme.First.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.First.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogTheme" parent="android:Theme.Dialog">
        <item name="android:textSize">14sp</item>
    </style>
</resources>